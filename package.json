{
  "name": "yt-trimmer",
  "version": "2.1.0",
  "description": "Download and trim sections of YouTube videos with a modern web UI",
  "author": "Bibboy",
  "license": "VBcode",
  "scripts": {
    "trim": "node src/actions/single-part.js",
    "trimall": "node src/actions/multiple-parts.js",
    "start": "node src/server/server.js",
    "dev": "nodemon src/server/server.js",
    "build": "npx tailwindcss -i ./public/input.css -o ./public/style.css",
    "health": "curl -s http://localhost:3000/health | node -e \"console.log(JSON.parse(require('fs').readFileSync(0, 'utf-8')))\"",
    "clean": "node -e \"const fs=require('fs');fs.readdirSync('.').filter(f=>f.startsWith('temp_')).forEach(f=>fs.unlinkSync(f));console.log('Cleanup done')\""
  },
  "dependencies": {
    "check-disk-space": "^3.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "readline-sync": "^1.4.10",
    "tailwindcss": "^3.4.3",
    "winston": "^3.19.0"
  }
}